{
  "name": "growth-bank-backend",
  "version": "1.0.0",
  "description": "Backend service for Growth Bank System - A gamified learning management platform",
  "main": "dist/index.js",
  "scripts": {
    "setup": "node setup.js",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration.test.ts",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "performance:analyze": "ts-node src/scripts/performance-optimizer.ts",
    "health:check": "ts-node src/scripts/health-check.ts",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:setup": "npm run migrate && npm run seed",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "learning",
    "gamification",
    "education",
    "progress-tracking",
    "nodejs",
    "typescript"
  ],
  "author": "Growth Bank System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "redis": "^4.6.8",
    "bull": "^4.11.3",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/pg": "^8.10.2",
    "@types/node": "^20.5.0",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/node-cron": "^3.0.8",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}